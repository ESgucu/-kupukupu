<div class="back-button">
  <%= link_to :back do %>
    <i class="fa-solid fa-arrow-left fa-2xl"></i>
  <% end %>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <h1 class="my-3">Create a Trip</h1>
      <%= form_for(@group) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.text_field :inv_code, value: SecureRandom.hex(10).to_s, class: 'd-none' %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
<%console%>
