<div class="back-button">
  <%= link_to :back do %>
    <i class="fa-solid fa-arrow-left fa-2xl"></i>
  <% end %>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <h1 class="my-3">Create a Trip</h1>
      <form action="/groups/new">
        <label for="group">Create a Trip</label>
        <input class="form-inputs" type="text" name="groupName" placeholder = "Trip Name">
        <input type="submit" class="btn btn-primary">
        If submitted, hide the form and get the name info to save the group.
      </form>
    </div>
  </div>
</div>
<%console%>
